{
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "ES2022",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "./dist",
    "baseUrl": "."
  }
}
